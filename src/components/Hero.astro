---
const personalImageAlt = "Pablo Prieto López";
import Badge from "@/components/Badge.astro";
import LinkedInIcon from "@/components/icons/LinkedIn.astro";
import SocialPill from "@/components/SocialPill.astro";
import GitHub from "./icons/GitHub.astro";
import Download from "./icons/Download.astro";
---

<div class="max-w-xl">
  <div class="flex gap-4 mb-4">
    <img
      class="rounded-full shadow-lg size-16"
      src="/yo.webp"
      alt={personalImageAlt}
    />
    <a
      href="https://linkedin.com/in/pablopl94"
      target="_blank"
      rel="noopener"
      class="flex items-center transition md:justify-center md:hover:scale-105"
    >
      <Badge>Disponible para trabajar</Badge>
    </a>
  </div>
  <h1
    class="text-4xl font-bold tracking-tight text-gray-800 sm:text-5xl dark:text-white"
  >
    Hola, soy Pablo
  </h1>
  <p
    class="mt-6 text-xl text-gray-800 dark:[&>strong]:text-yellow-200 [&>strong]:text-yellow-500 [&>strong]:font-semibold dark:text-gray-300"
  >
    +4 meses de experiencia. <strong
      >Desarrollador FullStack Junior Angular + Spring + MySQL</strong
    > de Alicante, España. Especializado en el desarrollo backend con Spring.
  </p>
  <nav class="flex flex-wrap gap-4 mt-8">
    <SocialPill href="/PabloPrietoLopez_CV.pdf" download>
      <Download class="size-4" />
      Currículum
    </SocialPill>
    <SocialPill href="https://linkedin.com/in/pablopl94">
      <LinkedInIcon class="size-4" />
      LinkedIn
    </SocialPill>
    <SocialPill href="https://github.com/pablopl94">
      <GitHub class="size-4" />
      GitHub
    </SocialPill>
  </nav>
</div>
