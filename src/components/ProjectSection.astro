---
import ProjectCard from "./ProjectCard.astro";

interface Props {
    title: string;
    projects: any[];
    sectionId: string;
    gradientColors: string;
    projectCount: number;
}

const { title, projects, sectionId, gradientColors, projectCount } =
    Astro.props;
---

<section class="project-section">
    <!-- GitHub Repository Style Container -->    <div class="github-repo bg-white dark:bg-gray-900 border border-gray-300 dark:border-gray-700 rounded-lg shadow-sm overflow-hidden mx-4 sm:mx-2 lg:mx-0">        <!-- Repository Header -->
        <div class="repo-header bg-gray-50 dark:bg-gray-800 border-b border-gray-300 dark:border-gray-700 p-2 sm:p-3 lg:p-4">
            <div class="flex items-center justify-between">
                <div class="flex items-center gap-2 sm:gap-3">
                    <!-- Repository Icon -->
                    <svg class="w-4 h-4 sm:w-5 sm:h-5 text-gray-600 dark:text-gray-400" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                    </svg>
                    <div>                        <h2 class="text-sm sm:text-base lg:text-lg font-semibold text-blue-600 dark:text-blue-400 hover:underline cursor-pointer truncate">
                            portfolio/{title.toLowerCase().replace(' ', '-')}
                        </h2>
                        <p class="text-xs sm:text-sm text-gray-600 dark:text-gray-400 truncate">
                            {title} projects collection
                        </p>
                    </div>
                </div>
                
                <!-- Repository Stats -->
                <div class="flex items-center gap-2 sm:gap-4">
                    <div class="hidden sm:flex items-center gap-2 text-sm text-gray-600 dark:text-gray-400">
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                        </svg>
                        <span>{projectCount} files</span>
                    </div>
                    <div class="hidden sm:flex items-center gap-2 text-sm text-gray-600 dark:text-gray-400">
                        <div class="w-3 h-3 rounded-full bg-green-500"></div>
                        <span>Public</span>
                    </div>
                    
                    <!-- Collapse Button -->
                    <button
                        class="section-toggle px-2 sm:px-3 py-1 text-xs sm:text-sm bg-gray-100 dark:bg-gray-700 hover:bg-gray-200 dark:hover:bg-gray-600 border border-gray-300 dark:border-gray-600 rounded-md transition-colors duration-200 flex items-center gap-1 sm:gap-2"
                        data-section={sectionId}
                    >
                        <span class="text-gray-700 dark:text-gray-300">Code</span>
                        <svg
                            class="toggle-icon w-4 h-4 text-gray-500 dark:text-gray-400 transition-transform duration-300"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M19 9l-7 7-7-7"></path>
                        </svg>
                    </button>
                </div>
            </div>
        </div>        <!-- Repository Navigation Tabs -->
        <div class="repo-nav bg-white dark:bg-gray-900 border-b border-gray-200 dark:border-gray-700">
            <div class="flex items-center px-2 sm:px-4">
                <div class="flex items-center gap-3 sm:gap-6 overflow-x-auto scrollbar-hide">
                    <button class="py-2 sm:py-3 px-1 border-b-2 border-orange-500 text-xs sm:text-sm font-medium text-gray-900 dark:text-white flex items-center gap-1 sm:gap-2 whitespace-nowrap">
                        <svg class="w-3 h-3 sm:w-4 sm:h-4" fill="currentColor" viewBox="0 0 24 24">
                            <path d="M14.7 6.3a1 1 0 0 0 0 1.4l1.6 1.6a1 1 0 0 0 1.4 0l3.77-3.77a6 6 0 0 1-7.94 7.94l-6.91 6.91a2.12 2.12 0 0 1-3-3l6.91-6.91a6 6 0 0 1 7.94-7.94l-3.76 3.76z"/>
                        </svg>
                        Code
                    </button>
                    <button class="py-2 sm:py-3 px-1 text-xs sm:text-sm text-gray-600 dark:text-gray-400 hover:text-gray-900 dark:hover:text-white flex items-center gap-1 sm:gap-2 whitespace-nowrap">
                        <svg class="w-3 h-3 sm:w-4 sm:h-4" fill="currentColor" viewBox="0 0 24 24">
                            <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"/>
                        </svg>
                        Issues
                        <span class="bg-gray-200 dark:bg-gray-700 text-gray-700 dark:text-gray-300 px-1 py-0.5 rounded-full text-xs">0</span>
                    </button>
                    <button class="py-2 sm:py-3 px-1 text-xs sm:text-sm text-gray-600 dark:text-gray-400 hover:text-gray-900 dark:hover:text-white flex items-center gap-1 sm:gap-2 whitespace-nowrap">
                        <svg class="w-3 h-3 sm:w-4 sm:h-4" fill="currentColor" viewBox="0 0 24 24">
                            <path d="M7.5 6a4.5 4.5 0 1 1 9 0 4.5 4.5 0 0 1-9 0zM3.751 20.105a8.25 8.25 0 0 1 16.498 0 .75.75 0 0 1-.437.695A18.683 18.683 0 0 1 12 22.5c-2.786 0-5.433-.608-7.812-1.7a.75.75 0 0 1-.437-.695z"/>
                        </svg>
                        Pull requests
                        <span class="bg-gray-200 dark:bg-gray-700 text-gray-700 dark:text-gray-300 px-1 py-0.5 rounded-full text-xs">0</span>
                    </button>
                </div>
            </div>
        </div>
        
        <!-- Repository Content -->
        <div
            class="section-content hidden repo-content bg-white dark:bg-gray-900"
            data-content={sectionId}
        >            <!-- File Browser Header -->
            <div class="file-browser-header bg-gray-50 dark:bg-gray-800 border-b border-gray-200 dark:border-gray-700 p-2 sm:p-3 lg:p-4">
                <div class="flex items-center justify-between">
                    <div class="flex items-center gap-2 sm:gap-3">
                        <svg class="w-3 h-3 sm:w-4 sm:h-4 text-gray-600 dark:text-gray-400" fill="currentColor" viewBox="0 0 24 24">
                            <path d="M5.5 4a.5.5 0 0 0-.5.5v7a.5.5 0 0 0 .5.5h4.5a.5.5 0 0 0 .5-.5v-7a.5.5 0 0 0-.5-.5h-4.5zM3 4.5A2.5 2.5 0 0 1 5.5 2h4.5A2.5 2.5 0 0 1 12.5 4.5v7a2.5 2.5 0 0 1-2.5 2.5h-4.5A2.5 2.5 0 0 1 3 11.5v-7z"/>
                        </svg>
                        <span class="text-xs sm:text-sm font-medium text-gray-900 dark:text-white">main</span>
                        <span class="text-xs sm:text-sm text-gray-600 dark:text-gray-400">â€¢</span>
                        <span class="text-xs sm:text-sm text-gray-600 dark:text-gray-400">{projectCount} files</span>
                    </div>
                    <div class="text-xs sm:text-sm text-gray-600 dark:text-gray-400 hidden sm:block">
                        Last updated 2 days ago
                    </div>
                </div>
            </div>
            
            <!-- Projects as Files -->
            <div class="file-list p-2 sm:p-3 lg:p-4 space-y-3 sm:space-y-4">
                {
                    projects.map((project, projectIndex) => (                        <div class="file-item border border-gray-200 dark:border-gray-700 rounded-lg overflow-hidden hover:border-gray-300 dark:hover:border-gray-600 transition-colors duration-200">
                            <!-- File Header -->
                            <div class="file-header bg-gray-50 dark:bg-gray-800 px-2 sm:px-3 lg:px-4 py-2 border-b border-gray-200 dark:border-gray-700">
                                <div class="flex items-center gap-2 sm:gap-3">
                                    <svg class="w-3 h-3 sm:w-4 sm:h-4 text-blue-600 dark:text-blue-400" fill="currentColor" viewBox="0 0 24 24">
                                        <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8l-6-6z"/>
                                        <polyline points="14,2 14,8 20,8"/>
                                    </svg>
                                    <span class="text-xs sm:text-sm font-medium text-gray-900 dark:text-white">
                                        {project.title.toLowerCase().replace(/\s+/g, '-')}.project
                                    </span>
                                </div>
                            </div>
                            <!-- File Content -->
                            <div class="file-content p-2 sm:p-3 lg:p-4 bg-white dark:bg-gray-900">
                                <ProjectCard
                                    project={project}
                                    projectIndex={projectIndex}
                                    sectionId={sectionId}
                                />
                            </div>
                        </div>
                    ))
                }
            </div>
        </div>
    </div>
</section>
